@model DataLayer.Models.Customers

    <div class="col-lg-10">
        <form asp-action="Edit" data-ajax="true" data-ajax-method="post" data-ajax-mode="after" data-ajax-update="#main-body" data-ajax-complete="callback">
            <input  autocomplete="off"  autocomplete="off" asp-for="Id" type="hidden" />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Name"></label>
                    <input  autocomplete="off"  autocomplete="off" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<DataLayer.ViewModels.Gender>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="DOB"></label>
                    <input  autocomplete="off"  autocomplete="off" asp-for="DOB" class="form-control" type="date" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ContactNumber"></label>
                    <input  autocomplete="off"  autocomplete="off" asp-for="ContactNumber" class="form-control" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>

                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Address"></label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>

                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-area="" asp-controller="Customer" asp-action="Index" id="IndexCall" class="btn btn-secondary" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update='#main-body'>Cancel</a>
        </form>
    </div>
<script>
    function callback(res)
    {
        debugger;
        //Success
        if (res.responseJSON['status'] == 1) {
            $.notify("Success ...", "success");
            $("#IndexCall").click();
        }
        else
        {
            $.notify(res.responseJSON['message'], "error");
        }
    }
</script>