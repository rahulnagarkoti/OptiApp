
@model DataLayer.Models.Customers

<div class="col-lg-10">
    <form asp-action="Delete" data-ajax="true" data-ajax-method="post" data-ajax-mode="after" data-ajax-update="#main-body" data-ajax-complete="callback">
        <input  autocomplete="off"  autocomplete="off" asp-for="Id" type="hidden">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input  autocomplete="off"  autocomplete="off" asp-for="Name" class="form-control" readonly="readonly" />
            </div>

            <div class="form-group col-md-3">
                <label asp-for="Gender"></label>
                <input  autocomplete="off"  autocomplete="off" asp-for="Gender" class="form-control" readonly="readonly" />
            </div>

            <div class="form-group col-md-3">
                <label asp-for="DOB"></label>
                <input  autocomplete="off"  autocomplete="off" asp-for="DOB" class="form-control" type="date" readonly="readonly" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="ContactNumber"></label>
                <input  autocomplete="off"  autocomplete="off" asp-for="ContactNumber" class="form-control" readonly="readonly" />

            </div>

            <div class="form-group col-md-6">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" readonly="readonly"></textarea>
            </div>
        </div>

        @if(@ViewContext.RouteData.Values["action"].ToString().ToLower() == "deleteview") 
        {
            <button type="submit" class="btn btn-danger">Delete</button>
        }
        <a asp-area="" asp-controller="Customer" asp-action="Index" id="IndexCall" class="btn btn-secondary" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update='#main-body'>Back</a>
    </form>
</div>
<script>
    function callback(res) {
        //Success
        if (res.responseJSON['status'] == 1) {
            $("#IndexCall").click();
        }
        else {
            toastr.error(res.responseJSON['message']);
        }
    }
</script>
