@model DataLayer.Models.Distributors

<div class="col-lg-10">
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Name"></label>
                <input   asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group col-md-4">
                <label asp-for="ContactPerson"></label>
                <input   asp-for="ContactPerson" class="form-control" type="date" />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="ContactNumber"></label>
                <input   asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" ></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <a asp-area="" asp-controller="Distributor" asp-action="Index" id="IndexCall" class="btn btn-secondary" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update='#main-body'>Cancel</a>
</div>
<script>
    function callback(res) {
        debugger;
        //Success
        if (res.responseJSON['status'] == 1) {
            $.notify("Success ...", "success");
            $("#IndexCall").click();
        }
        else {
            $.notify(res.responseJSON['message'], "error");
        }
    }
</script>