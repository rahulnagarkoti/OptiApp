@model DataLayer.Models.Doctors

<div class="col-lg-10">
    <form asp-action="Create" data-ajax="true" data-ajax-method="post" data-ajax-mode="after" data-ajax-update="#main-body" data-ajax-complete="callback">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input  autocomplete="off"  autocomplete="off" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ContactNumber"></label>
                <input  autocomplete="off"  autocomplete="off" asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-area="" asp-controller="Distributor" asp-action="Index" id="IndexCall" class="btn btn-secondary" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update='#main-body'>Cancel</a>
    </form>
</div>
<script>
    function callback(res) {
        debugger;
        //Success
        if (res.responseJSON['status'] == 1) {
            $.notify("Success ...", "success");
            $("#IndexCall").click();
        }
        else {
            $.notify(res.responseJSON['message'], "error");
        }
    }
</script>