@model DataLayer.ViewModels.ProductViewModel
@inject BuisnessLayer.Interface.IDistributorBL _distributor
@{
    var data = await _distributor.GetAllData();
    var list = data.Select(a => new SelectListItem()
    {
        Value = a.Id.ToString(),
        Text = a.Name
    }).ToList();

}

<div class="col-lg-10">
    <form asp-action="Create" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#main-body" data-ajax-complete="callback">
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-2">
                <label asp-for="StockCount"></label>
                <input asp-for="StockCount" class="form-control" />
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="DistributorName"></label>
                <input asp-for="DistributorName" class="form-control" />
                <span asp-validation-for="DistributorName" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-area="" asp-controller="Product" asp-action="Index" id="IndexCall" class="btn btn-secondary" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update='#main-body'>Cancel</a>
    </form>
</div>
